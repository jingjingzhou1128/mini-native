@import "../../assets/fonts/iconfont.wxss";
/* components/goodsList/index.wxss */
.goods-list {
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
}
.goods-list .goods-item {
  width: 49%;
  background: #fff;
  border-radius: 5px;
  padding: 10px;
  box-sizing: border-box;
  margin-bottom: 8px;
}
.goods-list .img-wrapper {
  width: 100%;
  height: 100px;
  overflow: hidden;
  background: #f5f5f5;
  margin-bottom: 10px;
}
.goods-list .img-wrapper image {
  width: 100%;
  height: auto;
}
.goods-list .info {
  height: 47px;
  overflow: hidden;
}
.goods-list .title {
  font-size: 13px;
}
.goods-list .desc {
  font-size: 10px;
  color: #6b6b6b;
}
.goods-list .goods-item .bottom {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-top: 10px;
}
.goods-list .bottom .price {
  color: #f53e5d;
  font-size: 13px;
}
.goods-list .btn-shop {
  background: #f53e5d;
  height: 16px;
  width: 16px;
  border-radius: 50%;
  text-align: center;
  color: #fff;
}
.goods-list .btn-shop icon {
  font-size: 12px;
  font-weight: 800;
  margin-top: -10px;
  vertical-align: top;
}
