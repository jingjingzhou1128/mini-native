@import "../../assets/fonts/iconfont.wxss";
/* components/goodsList/index.wxss */
.goods-list {
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
}
.goods-list .goods-item {
  width: 49%;
  background: #fff;
  border-radius: 5px;
  padding: 10px;
  box-sizing: border-box;
  margin-bottom: 8px;
}
.goods-list .goods-img {
  width: 100%;
  height: 100px;
  margin-bottom: 10px;
  position: relative;
}
.goods-list .img-wrapper {
  width: inherit;
  height: inherit;
  overflow: hidden;
  background: #f5f5f5;
  /* position: relative;
  z-index: 3; */
}
.goods-list .img-wrapper image {
  width: 100%;
  height: auto;
}
