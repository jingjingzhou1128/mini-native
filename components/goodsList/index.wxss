.to-cat {
  width: 100px;
  height: 100px;
  position: absolute;
  left: calc(50% - 50px);
  top: 0;
  background-position: top center;
  background-size: 100% auto;
  background-repeat: no-repeat;
  border-radius: 50%;
  opacity: 0;
  /* transform: translateX(-50%); */
  z-index: 2;
}
.goods-list .info {
  height: 47px;
  overflow: hidden;
}
.goods-list .title {
  font-size: 13px;
}
.goods-list .desc {
  font-size: 10px;
  color: #6b6b6b;
}
.goods-list .goods-item .bottom {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-top: 10px;
}
.goods-list .bottom .price {
  color: #f53e5d;
  font-size: 13px;
}
