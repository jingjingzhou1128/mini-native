.goods-list .btn-shop {
  position: relative;
  box-shadow: 0 0 10px 0 transparent;
}
.goods-list .btn-shop text {
  position: absolute;
  display: block;
  font-size: 10px;
  color: #fff;
  width: 10px;
  height: 10px;
  line-height: 10px;
  text-align: center;
  background: #ff3022;
  top: -5px;
  right: -5px;
  border: 2px solid #fff;
  border-radius: 50%;
}
.goods-list .btn-shop icon {
  font-size: 20px;
  color: #f53e5d;
}
