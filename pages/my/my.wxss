/* pages/my/my.wxss */
.container {
  background: #fff;
}
.userinfo {
  padding: 20px 15px;
  background: #ffdce2;
  display: flex;
  align-items: center;
}
.userinfo .avatar-wrapper {
  height: 50px;
  width: 50px;
  overflow: hidden;
  margin-right: 20px;
  border-radius: 50%;
  background: #eee;
}
.avatar-wrapper image {
  width: 100%;
  height: auto;
}
.userinfo .username {
  flex: 1;
  font-size: 15px;
  font-weight: 600;
}
.userinfo .username text {
  display: inline-block;
  padding: 0 14px;
}
.userinfo .username button {
  font-size: 15px;
  font-weight: 600;
  background: transparent;
  border-width: 0;
  text-align: left;
  padding: 0 14px;
  outline: 0;
}
.userinfo .username button::after {
  border-width: 0;
}
