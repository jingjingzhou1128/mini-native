/* pages/cat/cat.wxss */
.operate-wrapper {
  display: flex;
  align-items: center;
  padding: 10px;
  background: #fff;
}
.operate-wrapper .location {
  flex: 1;
  font-size: 14px;
  display: flex;
  align-items: center;
  justify-content: center;
}
.operate-wrapper .btn-remove {
  color: #6b6b6b;
  font-size: 12px;
}
.panel {
  margin: 10px 15px;
  background: #fff;
  border-radius: 5px;
}
.panel-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  border-bottom: 1px solid #eee;
  padding: 10px;
}

