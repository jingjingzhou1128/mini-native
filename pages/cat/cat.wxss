.van-checkbox {
  display: flex;
  align-items: center;
}
.van-checkbox .van-checkbox__label {
  font-size: 14px;
  font-weight: 600;
  font-style: italic;
  color: #f53e5d;
}

.btn-discount {
  display: flex;
  align-items: center;
  background: #ffdae0;
  color: #f53e5d;
  font-size: 11px;
  height: 16px;
  line-height: 16px;
  padding: 0 5px;
  border-radius: 8px;
}
.btn-discount icon {
  font-size: 10px;
  height: inherit;
  margin-top: -22px;
}
