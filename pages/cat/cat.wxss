/* pages/cat/cat.wxss */
.container {
  padding-bottom: 60px;
}
.operate-wrapper {
  display: flex;
  align-items: center;
  padding: 10px;
  background: #fff;
}
.operate-wrapper .location {
  flex: 1;
  font-size: 14px;
  display: flex;
  align-items: center;
  justify-content: center;
}
.operate-wrapper .btn-remove {
  color: #6b6b6b;
  font-size: 12px;
}
.container.sticky {
  padding-top: 40px;
}
.container.sticky .panel-header {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  z-index: 9;
}
.panel {
  margin: 10px 15px;
  background: #fff;
  border-radius: 5px;
}
.panel-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  border-bottom: 1px solid #eee;
  padding: 10px;
  background: #fff;
}
.panel-header .title {
  font-size: 14px;
  font-weight: 600;
  font-style: italic;
  color: #f53e5d;
  flex: 1;
}

