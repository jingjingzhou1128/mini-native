/**index.wxss**/
.container {
  background: #f5f5f5;
  padding-top: 44px;
}
/* search */
.search-wrapper {
  display: flex;
  align-items: center;
  -webkit-box-pack: center;
  padding: 10px;
  background: #fff;
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  z-index: 999;
}
.search-wrapper .left {
  color: #f53e5d;
}
.search-wrapper .left icon {
  font-size: 18px;
  margin-right:3px;
}
.search-wrapper .left text {
  font-size: 16px;
}
.search-wrapper .right {
  flex: 1;
  padding-left: 15px;
}
.search-wrapper .to-search {
  height: 24px;
  line-height: 24px;
  color: #aaa;
  border-color: #eee;
  background-color: #eee;
  border-radius: 5px;
  text-align: center;
  font-size: 12px;
  flex: 1;
  padding: 0 15px;
  margin-left: 15px;
}
.search-wrapper .to-search::after {
  display: none;
}
.search-wrapper .to-search icon {
  font-size: 14px;
  margin-right: 5px;
}
.swiper-wrapper {
  position: relative;
  padding: 0 10px;
  background: #fff;
}
.swiper-wrapper swiper {
  border-radius: 10px;
  overflow: hidden;
}
.swiper-wrapper image {
  width: 100%;
  height: auto;
}
.swiper-wrapper .swiper-index {
  position: absolute;
  bottom: 10px;
  right: 10px;
  font-size: 12px;
  background-color: rgba(0, 0, 0, 0.3);
  padding: 0 8px;
  border-radius: 10px;
  height: 20px;
  line-height: 20px;
  color: #eee;
}
.swiper-wrapper .btn-share {
  background-color: #f53e5d;
  color: #fff;
  padding: 0 30px;
  display: inline-block;
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
  bottom: -16px;
  height: 46px;
  line-height: 46px;
  border-radius: 23px;
  box-shadow: 0 5px 0 0 #aa2b08;
}
.swiper-wrapper .btn-share::after {
  display: none;
}
.classify-wrapper {
  padding: 35px 10px 10px;
  background: #fff;
}
.classify-wrapper .equity-list {
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.classify-wrapper .equity-item {
  font-size: 10px;
  color: #f53e5d;
}
.classify-wrapper .equity-item icon {
  font-size: 10px;
  margin-right: 3px;
}
.classify-wrapper movable-area {
  height: 161px;
}
.classify-content {
  padding-top: 15px;
  display: flex;
  flex-wrap: wrap;
  height: auto;
}
.classify-content .classify-item {
  display: inline-block;
  box-sizing: border-box;
  width: 10%;
  text-align: center;
  margin-bottom: 10px;
  padding: 0 5px;
}
.classify-content .classify-item .image-wrapper {
  width: 40px;
  height: 40px;
  overflow: hidden;
  border-radius: 50%;
  background-color: #f5f5f5;
  margin: 0 auto 3px;
}
.classify-content .image-wrapper image {
  width: 100%;
  height: auto;
}
.classify-content .classify-item text {
  font-size: 10px;
}
.classify-wrapper progress {
  width: 25px;
  margin: 0 auto;
}
.goods-wrapper {
  padding: 0 10px;
}
.goods-wrapper.sticky {
  padding-top: 54px;
}
.goods-wrapper .loading-wrapper {
  text-align: cener;
  padding-top: 150px;
  box-sizing: border-box;
}
.goods-wrapper.sticky .loading-wrapper  {
  padding-top: 204px;
}
.goods-wrapper .loading-wrapper .loading {
  width: 30px;
  height: 30px;
  border: 6px solid #ddd;
  border-radius: 50%;
  margin: 0 auto;
}
.goods-wrapper movable-area {
  background: #f5f5f5;
}
.goods-wrapper.sticky movable-area {
  width: 100%;
  position: fixed;
  top: 44px;
  left: 0;
  right: 0;
}
.goods-wrapper movable-view {
  padding: 10px 0;
  display: flex;
  align-items: flex-start;
  height: auto;
}
.goods-wrapper.sticky movable-view {
  padding-left: 10px;
  padding-right: 10px;
}
.goods-wrapper .goods-class {
  text-align: center;
}
.goods-class {
  padding: 0 10px;
  width: 75px;
  overflow: hidden;
}
.goods-class + .goods-class {
  border-left: 1px solid #eee;
}
.goods-class:first-child {
  padding-left: 0;
}
.goods-class:last-child {
  padding-right: 0;
}
.goods-class .name {
  font-size: 14px;
  font-weight: 400;
  white-space: nowrap
}
.goods-class .type {
  font-size: 10px;
  color: #6b6b6b;
  padding: 0 5px;
  white-space: nowrap
}
.goods-class.selected .name {
  color: #f53e5d;
}
.goods-class.selected .type {
  color: #fff;
  background: #f53e5d;
  border-radius: 8px;
}
.goods-list {
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
}
.goods-list .goods-item {
  width: 49%;
  background: #fff;
  border-radius: 5px;
  padding: 10px;
  box-sizing: border-box;
  margin-bottom: 8px;
}
.goods-list .img-wrapper {
  width: 100%;
  height: 100px;
  overflow: hidden;
  background: #f5f5f5;
  margin-bottom: 10px;
}
.goods-list .img-wrapper image {
  width: 100%;
  height: auto;
}
.goods-list .info {
  height: 47px;
  overflow: hidden;
}
.goods-list .title {
  font-size: 13px;
}
.goods-list .desc {
  font-size: 10px;
  color: #6b6b6b;
}
.goods-list .goods-item .bottom {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-top: 10px;
}
.goods-list .bottom .price {
  color: #f53e5d;
  font-size: 13px;
}
.goods-list .btn-shop {
  background: #f53e5d;
  height: 16px;
  width: 16px;
  border-radius: 50%;
  text-align: center;
  color: #fff;
}
.goods-list .btn-shop icon {
  font-size: 12px;
  font-weight: 800;
  margin-top: -10px;
  vertical-align: top;
}
.goods-wrapper .bottom-tip {
  text-align: center;
  font-size: 12px;
  padding: 10px 0;
  color: #6b6b6b;
}
