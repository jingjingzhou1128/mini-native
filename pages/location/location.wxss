/* pages/location/location.wxss */
.container {
  background: #fff;
}
.search-wrapper {
  padding: 10px;
  background: #fff;
}
.search-wrapper .search-location {
  padding: 0;
}
.search-wrapper .search-label {
  display: flex;
  align-items: center;
  font-size: 14px;
  color: #333;
}
#map {
  width: 100%;
  height: 300px;
}

.cell-poi,
.search-poi {
  padding: 10px;
  align-items: center;
}
.cell-poi .van-cell__title,
.search-poi .van-cell__title {
  padding: 0 10px;
  flex: 1;
}
.cell-poi .van-cell__value {
  flex: unset;
  align-self: flex-start;
  font-size: 12px;
}
.cell-title {
  font-size: 14px;
}
.cell-label {
  font-size: 12px;
}