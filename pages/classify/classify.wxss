/* pages/classify/classify.wxss */
.container {
  height: 100%;
}
/* search */
.search-wrapper {
  padding: 10px;
  background: #fff;
}
.search-wrapper .to-search {
  height: 24px;
  line-height: 24px;
  color: #aaa;
  border-color: #eee;
  background-color: #eee;
  border-radius: 5px;
  text-align: center;
  font-size: 12px;
  flex: 1;
  padding: 0 15px;
}
.search-wrapper .to-search::after {
  display: none;
}
.search-wrapper .to-search icon {
  font-size: 14px;
  margin-right: 5px;
}

/* main */
.main {
  display: flex;
  flex: 1;
  height: 100%;
  overflow: hidden;
}

/* classify */
.classify {
  width: 100px;
  background: #f5f5f5;
  height: 100%;
}

/* sidebar */
.classify .menu-item {
  padding: 10px 0;
  font-size: 12px;
  color: #aaa;
  text-align: center;
}
.classify .menu-item text {
  display: inline-block;
  width: 100%;
  box-sizing: border-box;
  border-left: 3px solid transparent;
}
.classify .menu-item.active {
  color: #333;
  font-weight: 600;
  background: #fff;
}
.classify .menu-item.active text {
  border-left-color: #f53e5d;
}

/* goods */
.goods {
  flex: 1;
  background: #fff;
  height: 100%;
  width: calc(100% - 100px);
  position: relative;
}
.goods .image-wrapper {
  max-height: 100px;
  overflow: hidden;
  border-radius: 5px;
  margin: 0 10px;
}
.goods .image-wrapper image {
  width: 100%;
  height: auto;
}
.classify-scroll-wrapper {
  padding: 10px;
  position: relative;
  box-sizing: border-box;
  background: #fff;
}
.classify-scroll-wrapper.sticky {
  position: fixed;
  top: 44px;
  right: 0;
  left: 100px;
}
.classify-scroll {
  width: 100%;
  white-space: nowrap;
}
.classify-scroll .tab-item {
  display: inline-block;
  height: 20px;
  line-height: 20px;
  padding: 0 5px;
  font-size: 11px;
  border: 1px solid #eee;
  border-radius: 3px;
}
.classify-scroll .tab-item.active {
  color: #f53e5d;
  border-color: #f53e5d;
}
.classify-scroll .tab-item + .tab-item {
  margin-left: 5px;
}
.classify-scroll-wrapper .classify-all {
  position: absolute;
  right: 5px;
  top: 5px;
  height: 30px;
  line-height: 30px;
  width: 40px;
  text-align: right;
  padding-right: 5px;
  box-sizing: border-box;
  color: #8e8e8e;
  background-image: linear-gradient(to right, transparent 0%, #fff 35%);
}

/* goods list */
/* .goods-list {
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
} */
.goods-list .goods-item {
  /* width: 49%; */
  background: #fff;
  /* border-radius: 5px; */
  padding: 10px;
  box-sizing: border-box;
  /* margin-bottom: 8px; */
  display: flex;
  align-items: flex-start;
  border-bottom: 1px solid #eee;
}
.goods-list .img-wrapper {
  width: 90px;
  height: 90px;
  overflow: hidden;
  /* background: #f5f5f5; */
  margin-right: 10px;
}
.goods-list .img-wrapper image {
  width: 100%;
  height: auto;
}
.goods-list .item-right {
  flex: 1;
}
.goods-list .info {
  height: 47px;
  overflow: hidden;
}
.goods-list .title {
  font-size: 13px;
}
.goods-list .desc {
  font-size: 10px;
  color: #6b6b6b;
}
.goods-list .goods-item .bottom {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-top: 10px;
}
.goods-list .bottom .price {
  color: #f53e5d;
  font-size: 13px;
}
.goods-list .btn-shop text {
  display: inline-block;
  padding: 0 5px;
  text-align: center;
  font-size: 12px;
}
.goods-list .btn-shop icon {
  font-size: 20px;
  color: #f53e5d;
}
.goods .bottom-tip,
.goods .loading-tip {
  text-align: center;
  font-size: 12px;
  padding: 10px 0;
  color: #6b6b6b;
}

.classify-overlay {
  position: fixed;
  left: 100px;
  top: 44px;
  /* width: 100%; */
  height: 100%;
  background-color: rgba(0,0,0,.7);
}
.overlay-content {
  background: #fff;
  padding: 10px;
}
.overlay-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  font-size: 13px;
  color: #8e8e8e;
  padding-bottom: 10px;
  border-bottom: 1px solid #eee;
}
.classify-list {
  padding: 10px 0;
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
}
.classify-list .tab-item {
  height: 30px;
  line-height: 30px;
  box-sizing: border-box;
  padding: 0 5px;
  font-size: 12px;
  border: 1px solid #eee;
  border-radius: 3px;
  text-align: center;
  width: 30%;
  margin-bottom: 5px;
}
.classify-list .tab-item.active {
  color: #f53e5d;
  border-color: #f53e5d;
}